<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppMAUIGallery.Views.Layouts.StackLayoutPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="StackLayoutPage">
    <StackLayout
        Margin="20"
        Padding="20"
        BackgroundColor="LightBlue"
        Orientation="Vertical"
        Spacing="10">
        <Label Text="Olá Mundo!" VerticalOptions="Center" />

        <StackLayout Orientation="Horizontal" Spacing="10">
            <Button HorizontalOptions="Start" Text="Olá Mundo!" />
            <Button HorizontalOptions="Start" Text="Olá Mundo!" />
        </StackLayout>

        <VerticalStackLayout
            Padding="10"
            BackgroundColor="LightGreen"
            Spacing="10">
            <Label Text="Olá Mundo 1." />
            <Label Text="Olá Mundo 2." />
        </VerticalStackLayout>

        <HorizontalStackLayout
            Padding="10"
            BackgroundColor="LightGreen"
            Spacing="20">
            <Label Text="Olá Mundo 1." />
            <Label Text="Olá Mundo 2." />
        </HorizontalStackLayout>

        <Button
            HeightRequest="100"
            HorizontalOptions="Start"
            Text="Olá mundo!"
            WidthRequest="200" />

    </StackLayout>
</ContentPage>