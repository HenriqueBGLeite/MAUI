<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppMAUIGallery.Views.Cells.EntryCellPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="EntryCellPage">
    <VerticalStackLayout Padding="10">
        <TableView>
            <TableSection Title="Configuração">
                <EntryCell
                    HorizontalTextAlignment="Center"
                    Keyboard="Chat"
                    Label="Nome"
                    LabelColor="Red"
                    Placeholder="Entre com seu nome" />
                <EntryCell Label="Idade" Placeholder="Entre com seu nome" />
                <EntryCell Label="Endereço" Placeholder="Entre com seu nome" />
                <EntryCell Label="Telefone" Placeholder="Entre com seu nome" />
            </TableSection>
        </TableView>
    </VerticalStackLayout>
</ContentPage>