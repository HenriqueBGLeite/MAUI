<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppMAUIGallery.Views.Components.Forms.PickerPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="PickerPage">
    <VerticalStackLayout Padding="10" Spacing="30">
        <Picker
            Title="Marcas"
            SelectedIndexChanged="Picker_SelectedIndexChanged"
            TitleColor="Gray">
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>Fiat</x:String>
                    <x:String>VW</x:String>
                    <x:String>Chevrolet</x:String>
                    <x:String>Honda</x:String>
                    <x:String>Renault</x:String>
                    <x:String>Pegeout</x:String>
                    <x:String>Jeep</x:String>
                </x:Array>
            </Picker.ItemsSource>
        </Picker>

        <Label x:Name="LblValue" />
    </VerticalStackLayout>
</ContentPage>