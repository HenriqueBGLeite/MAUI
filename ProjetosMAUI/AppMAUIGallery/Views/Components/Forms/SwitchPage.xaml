<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppMAUIGallery.Views.Components.Forms.SwitchPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="SwitchPage">
    <VerticalStackLayout Padding="10" Spacing="30">
        <Label
            HorizontalOptions="Center"
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" />


        <HorizontalStackLayout Spacing="10">
            <Switch
                Background="Gray"
                IsToggled="False"
                OnColor="LightBlue"
                ThumbColor="Blue"
                Toggled="Switch_Toggled_Label" />

            <Label x:Name="LblStatus" VerticalOptions="Center" />
        </HorizontalStackLayout>

        <HorizontalStackLayout Spacing="10">
            <Switch
                Background="Gray"
                IsToggled="False"
                OnColor="LightBlue"
                ThumbColor="Blue"
                Toggled="Switch_Toggled" />

            <Image
                x:Name="Img"
                HeightRequest="40"
                Source="poweroff.png" />
        </HorizontalStackLayout>

    </VerticalStackLayout>
</ContentPage>